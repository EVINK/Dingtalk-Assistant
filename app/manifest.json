{
  "manifest_version": 2,
  "name": "钉钉助手",
  "description": "全屏模式、登录持久化、新消息提醒……一款开源的办公效率工具",
  "version": "1.0.0",
  "short_name": "dingding",
  "icons": {
    "16": "icon.png",
    "48": "icon.png",
    "128": "icon.png"
  },
  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": [
        "http://im.dingtalk.com/",
        "https://im.dingtalk.com/"
      ],
      "js": [
        "scripts/utils.js",
        "scripts/snapshot.js",
        "scripts/generalPageContent.js",
        "scripts/dingTalkContent.js"
      ],
      "run_at": "document_end",
      "all_frames": true
    },
    {
      "matches": [
        "<all_urls>"
      ],
      "css": [
        "styles/content.css"
      ],
      "js": [
        "scripts/utils.js",
        "scripts/snapshot.js",
        "scripts/generalPageContent.js"
      ],
      "run_at": "document_end",
      "all_frames": true
    }
  ],
  "web_accessible_resources": [
    "assets/imgs/*"
  ],
  "background": {
    "persistent": true,
    "scripts": [
      "scripts/utils.js",
      "scripts/background.js"
    ]
  },
  "permissions": [
    "<all_urls>",
    "activeTab",
    "storage",
    "tabs",
    "background",
    "desktopCapture"
  ],
  "commands": {
    "Ctrl+M": {
      "suggested_key": {
        "default": "Ctrl+M",
        "mac": "Command+M"
      },
      "description": "Ctrl+M"
    }
  },
  "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'"
}
