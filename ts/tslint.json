{
  "defaultSeverity": "error",
  "extends": [
    "tslint:recommended"
  ],
  "jsRules": {},
  "rules": {
    "object-literal-sort-keys": false,
    "trailing-comma": false,
    "no-console": false,
    "semicolon": [
      true,
      "never"
    ],
    "quotemark": [
      true,
      "single",
      "avoid-template"
    ],
    "variable-name": [
      true,
      "check-format",
      "ban-keywords",
      "allow-leading-underscore",
      "allow-pascal-case"
    ],
    "interface-name": false,
    "ban-types": [
      true,
      [
        "Object",
        "Use {} instead."
      ],
      [
        "String",
        "Use string instead"
      ],
      [
        "Number",
        "Use number instead"
      ],
      [
        "Array",
        "Use type[] instead"
      ]
    ],
    "forin": false,
    "no-namespace": false,
    "radix": false,
    "max-classes-per-file": false,
    "object-literal-key-quotes": [
      true,
      "as-needed"
    ],
    "only-arrow-functions": true,
    "unified-signatures": false,
    "no-unused-expression": [
      true,
      "allow-new"
    ],
    "space-before-function-paren": false,
    "no-string-literal": false,
    "max-line-length": [
      true,
      {
        "limit": 120,
        "ignore-pattern": "^import |^export {(.*?)}"
      }
    ]
  },
  "rulesDirectory": []
}
